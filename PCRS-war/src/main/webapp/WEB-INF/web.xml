<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>PCRSJSF</display-name>
  <welcome-file-list>
		<welcome-file>profile.xhtml</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>/faces/*</url-pattern>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>
	<context-param>
		<param-name>facelets.SKIP_COMMENTS</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.FONT_AWESOME</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>primefaces.THEME</param-name>
		<param-value>webstyle</param-value>
	</context-param>
	<filter>
		<filter-name>loggedIn</filter-name>
		<filter-class>colruyt.pcrs.filters.LoginFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>loggedIn</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>adminPrivilege</filter-name>
		<filter-class>colruyt.pcrs.filters.AdminPrivilegeFilter</filter-class>
	</filter>
	<filter>
		<filter-name>SurveyDefinitionResponsible</filter-name>
		<filter-class>colruyt.pcrs.filters.SurveyDefinitionResponsiblePrivilegeFilter</filter-class>
	</filter>
	<filter>
		<filter-name>teamMemberPrivilege</filter-name>
		<filter-class>colruyt.pcrs.filters.TeamMemberPrivilegeFilter</filter-class>
	</filter>
	<filter>
		<filter-name>teamManagerPrivilege</filter-name>
		<filter-class>colruyt.pcrs.filters.TeamManagerPrivilegeFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>loggedIn</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>teamManagerPrivilege</filter-name>
		<url-pattern>/teammanager/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>teamMemberPrivilege</filter-name>
		<url-pattern>/teammember/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>SurveyDefinitionResponsible</filter-name>
		<url-pattern>/SurveyDefinitionResponsible/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>adminPrivilege</filter-name>
		<url-pattern>/admin/*</url-pattern>
	</filter-mapping>
	<mime-mapping>
		<extension>eot</extension>
		<mime-type>application/vnd.ms-fontobject</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>otf</extension>
		<mime-type>font/opentype</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>ttf</extension>
		<mime-type>application/x-font-ttf</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>woff</extension>
		<mime-type>application/x-font-woff</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>svg</extension>
		<mime-type>image/svg+xml</mime-type>
	</mime-mapping>
</web-app>